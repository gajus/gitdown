{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "bin": "./dist/bin/index.js",
  "dependencies": {
    "bluebird": "^3.5.2",
    "deadlink": "^1.1.3",
    "eslint": "^5.7.0",
    "filesize": "^3.6.1",
    "gitinfo": "^2.2.0",
    "glob": "^7.1.3",
    "jsonfile": "^5.0.0",
    "lodash": "^4.17.11",
    "markdown-contents": "^1.0.11",
    "marked": "^0.5.1",
    "moment": "^2.22.2",
    "stack-trace": "^0.0.10",
    "url-extractor": "^2.0.2",
    "yargs": "^12.0.3-candidate.0"
  },
  "description": "Github markdown preprocessor.",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-transform-flow-strip-types": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "ava": "^1.0.0-rc.1",
    "babel-plugin-istanbul": "^5.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.7.0",
    "eslint-config-canonical": "^13.0.0",
    "husky": "^1.1.2",
    "mocha": "^5.2.0",
    "nock": "^10.0.1",
    "nyc": "^13.1.0",
    "require-uncached": "^1",
    "semantic-release": "^15.10.5",
    "sinon": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "post-commit": "if [[ -z \"$SKIP_CREATE_README\" ]]; then export SKIP_CREATE_README=1 && npm run create-readme && git commit -m 'docs: generate docs' --no-verify -- README.md; else unset SKIP_CREATE_README; fi",
      "pre-commit": "npm run lint && npm run test && npm run build"
    }
  },
  "keywords": [
    "github",
    "markdown",
    "table of contents",
    "toc",
    "include",
    "variable",
    "transclusion"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "name": "gitdown",
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/gitdown"
  },
  "scripts": {
    "build": "babel ./src --out-dir ./dist --copy-files",
    "create-readme": "babel-node ./src/bin/index.js ./.README/README.md --output-file ./README.md",
    "lint": "eslint ./src ./tests",
    "test": "mocha ./tests/**/*.js --compilers js:@babel/register"
  },
  "version": "2.5.2"
}
